{
  "extends": ["prettier", "airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "env": {
    "commonjs": true,
    "node": true
  },
  "rules": {
    "import/no-cycle": 0,
    "comma-dangle": "off",
    "consistent-return": "off",
    "no-console": 0,
    "indent": 0,
    "no-useless-escape": "off",
    "newline-per-chained-call": 0,
    "object-curly-newline": "off",
    "no-underscore-dangle": "off",
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "none",
        "singleQuote": true,
        "printWidth": 100,
        "tabWidth": 4,
        "semi": true
      }
    ]
  },
  "plugins": ["prettier"]
}
